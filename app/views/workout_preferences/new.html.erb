<!-- app/views/workout_preferences/new.html.erb -->
<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card">
        <div class="card-body">
          <%= simple_form_for [@user, @workout_preference], html: { class: 'form' } do |form| %>
            <% if @workout_preference.errors.any? %>
              <div id="error_explanation" class="alert alert-danger">
                <h2><%= pluralize(@workout_preference.errors.count, "error") %> prohibited this workout preference from being saved:</h2>
                <ul>
                  <% @workout_preference.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                  <% end %>
                </ul>
              </div>
            <% end %>

            <div class="form-group">
              <%= form.label :fitness_goal %>
              <%= form.select :fitness_goal, ['Lose Weight', 'Build Muscle', 'Stay Fit', 'Other'], { prompt: 'Select Fitness Goal' }, class: 'form-control' %>
            </div>

            <div class="form-group">
              <%= form.label :days_per_week %>
              <%= form.number_field :days_per_week, class: 'form-control' %>
            </div>

            <div class="form-group">
              <%= form.label :time_per_session %>
              <%= form.number_field :time_per_session, placeholder: 'Enter time in minutes', class: 'form-control' %>
            </div>

            <div class="form-group">
              <%= form.label :fitness_level %>
              <%= form.select :fitness_level, ['Beginner', 'Intermediate', 'Advanced'], { prompt: 'Select Fitness Level' }, class: 'form-control' %>
            </div>

            <div class="form-group">
              <%= form.label :additional_comments %>
              <%= form.text_area :additional_comments, class: 'form-control' %>
            </div>

            <div class="form-actions text-center">
              <%= form.submit "Generate Workout Plan", class: 'btn btn-primary' %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
