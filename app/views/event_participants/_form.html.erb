<% if @event.group.user_id == current_user.id %>
  <!-- User is the president, show appropriate message -->
  <h2>YOU ARE The President!</h2>
  <%= button_to "Delete Event", event_path(@event), method: :delete, data: { turbo_confirm: 'Are you sure?' } %>
  <!-- Your existing code for president -->
  <% if flash[:alert].present? %>
    <div class="alert alert-danger">
      <%= flash[:alert] %>
    </div>
  <% end %>
<% elsif @existing_participant %>
  <!-- User is already a member, show appropriate message -->
  <h2>you are a member</h2>
  <%= link_to "Leave Group", group_group_participant_path(@group, @existing_participant), method: :delete, data: { turbo_confirm: 'Are you sure?' } %>
  <!-- Your existing code for existing participant -->
  <% if flash[:notice].present? %>
    <div class="alert alert-success">
      <%= flash[:notice] %>
    </div>
  <% end %>
  <% if flash[:alert].present? %>
    <div class="alert alert-danger">
      <%= flash[:alert] %>
    </div>
  <% end %>
<% else %>
  <!-- User is not a participant, provide a button to become one -->
  <%= button_to "Become a Participant", event_participants_path(event_id: @event.id, user_id: current_user.id), method: :post, data: { turbo_confirm: 'Are you sure?' } %>
<% end %>
