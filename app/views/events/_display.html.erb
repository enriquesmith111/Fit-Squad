<% @events.each do |event| %>
      <tr>
        <td><%= event.name %></td>
        <td><%= event.date %> /</td>
        <% time = event.time
        hour = time.hour
        minute = time.min
        second = time.sec
        time_string = " at #{hour}:#{minute}:#{second}" %>
        <td><%= time_string %></td>
            <%= link_to 'More Details', group_event_path(@group.id) %>
        <% if event.event_image.end_with?("jpg") %>
  <%=image_tag event.event_image, width: 300, height: 200 %> <hr>
  <%else%>
    <%= image_tag eval(event.event_image)["url"], width: 300, height: 200 %> 
    <hr>
  <% end %>
<% end %>
